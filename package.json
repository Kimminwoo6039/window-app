{
  "name": "my-app",
  "version": "1.0.0",
  "private": true,
  "main": "public/main.js",
  "build": {
    "appId": "com.example.myapp",
    "productName": "미어캐츠",
    "icon": "public/meer.ico",
    "publish": [
      {
        "provider": "generic",
        "url": "https://github.com/Kimminwoo6039/window-app/releases",
        "channel": "latest",
        "publishAutoUpdate": true
      }
    ],
    "files": [
      "public/**/*",
      "!**/node_modules/**/*",
      "!**/dist/**/*",
      "!**/build/**/*",
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "publish": {
        "provider": "github",
        "owner": "Kimminwoo6039",
        "repo": "window-app",
        "releaseType": "release"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kimminwoo6039/window-app"
  },
  "homepage": "./",
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "@radix-ui/react-tooltip": "^1.1.2",
    "antd": "^5.19.0",
    "auto-launch": "^5.0.6",
    "axios": "^1.7.2",
    "better-sqlite3": "^11.1.2",
    "body-parser": "^1.20.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron-log": "^5.1.5",
    "electron-progressbar": "^2.2.1",
    "electron-push-receiver": "^2.1.3",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.2.1",
    "express": "^4.19.2",
    "firebase": "^10.8.0",
    "firebase-admin": "^12.2.0",
    "google-auth-library": "^9.11.0",
    "lucide-react": "^0.396.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.24.0",
    "react-scripts": "5.0.1",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "wait-on": "^7.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "el-start": "electron .",
    "electron-start": "set ELECTRON_START_URL=http://localhost:3000 && electron .",
    "electron-pack": "npm run build && electron-builder build --win --publish always -c.extraMetadata.main=build/main.js && npm run rebuild",
    "rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "better-sqlite3": "^11.1.2",
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "path-browserify": "^1.0.1",
    "tailwindcss": "^3.4.4"
  }
}
